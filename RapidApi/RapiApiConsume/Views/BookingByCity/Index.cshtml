@model List<RapiApiConsume.Models.Result>
@{
    Layout = null;
}


@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> <br />

    <table class=" table table-bordered">
        <tr>
            <td>#</td>
            <td>Otel Adı</td>
            <td>Otel Puanı</td>
            <td>Detaylar</td>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.hotel_name</td>
                <td>@item.review_score</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
</div>

