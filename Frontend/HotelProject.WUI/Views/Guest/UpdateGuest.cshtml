@model UpdateGuestDto

@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}




<form method="post">
    <input type="hidden" asp-for="GuestID" />
    <label>
        Misafir Adı:
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation for="Name" class="text-danger"></span>
    </label>
    <br />
    <label>
        Misafir Soyadı:
        <input type="text" asp-for="SurName" class="form-control" />
        <span asp-validation for="SurName" class="text-danger"></span>

    </label>
    <br />
    <label>
        Misafir Şehir :
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation for="City" class="text-danger"></span>

    </label>
    <br />

    <button class="btn btn-primary">Misafiri Güncelle</button>

</form>





